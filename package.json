{
  "name": "git-worklists",
  "displayName": "Git Worklists",
  "description": "",
  "version": "0.0.1",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitWorklists",
          "title": "Git Worklists",
          "icon": "media/activity-icon.png"
        }
      ]
    },
    "views": {
      "gitWorklists": [
        {
          "id": "gitWorklists.changelists",
          "name": "Changelists",
          "icon": "media/activity-icon.png"
        },
        {
          "id": "gitWorklists.commitPanel",
          "name": "Commit",
          "type": "webview",
          "icon": "media/activity-icon.png"
        }
      ]
    },
    "commands": [
      {
        "command": "gitWorklists.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "gitWorklists.selectFile",
        "title": "Stage File",
        "icon": "$(check)"
      },
      {
        "command": "gitWorklists.unselectFile",
        "title": "Unstage File",
        "icon": "$(circle-slash)"
      },
      {
        "command": "gitWorklists.toggleGroupSelection",
        "title": "Toggle Group Staging",
        "icon": "$(checklist)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "gitWorklists.refresh",
          "when": "view == gitWorklists.changelists",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "gitWorklists.toggleGroupSelection",
          "when": "view == gitWorklists.changelists && viewItem == gitWorklists.group",
          "group": "inline"
        },
        {
          "command": "gitWorklists.selectFile",
          "when": "view == gitWorklists.changelists && viewItem == gitWorklists.file",
          "group": "inline"
        },
        {
          "command": "gitWorklists.unselectFile",
          "when": "view == gitWorklists.changelists && viewItem == gitWorklists.file",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
